    <title>accordian demo</title>
    <style>

       *{
        margin: 0;
        padding: 0;
        font-family: 'Poppin','sans-serif';
        box-sizing: 'border-box';
       }

       .accordiann{
        margin: 60px auto;
        width: 600px;
       }

       .accordiann li {
        list-style: none;
        width: 70%;
        margin: 20px;
        padding: 10px;
        border-radius: 8px;
        background:#e3edf7;
        box-shadow: 6px 6px 10px -1px rgba(0,0,0,0.15),
                    -6px -6px 10px -1px rgba(255,255,255,255.15);
       }

       .accordiann li label {
        display: flex;
        align-items: center;
        padding: 10px;
        font-size:18px;
        font-weight: 500;
        cursor: pointer;
       }
       label::before {
         content:'+';
         margin-right: 10px;
         font-size: 24px;
         font-weight: 600;
       }

       input[type='radio']{
         display:none;
       }

       .accordiann .content {
         color: #555;
         padding: 0 10px;
         line-height: 26px;
         max-height: 0;
         overflow: hidden;
         transition: max-height 0.5s, padding 0.5s;
       }

       input[type='radio']:checked + label + .content {
         max-height: 400px;
         padding: 10px 10px 20px;
       }

       input[type='radio']:checked + label::before{
         content: '-';
       }


    </style>
  </head>
