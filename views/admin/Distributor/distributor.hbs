<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Distributor Page</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>

    <!-- Include custom CSS files -->
    <link rel="stylesheet" href="../../../../css/home.admin.css">
    <link rel="stylesheet" href="../../../../css/admin/crorg.css">
    <link rel="stylesheet" href="../../../../css/admin/crorg_c.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }

        .container-fluid {
            padding-top: 20px;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-body {
            background-color: #fff;
            border: 1px solid rgba(0, 0, 0, 0.125);
            border-radius: 0.25rem;
            padding: 20px;
        }

        .distributor-name {
            cursor: pointer;
            color: #007bff;
        }

        .collapse.show {
            display: block;
        }

        .collapse {
            display: none;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-3">
                <ul class="accordiann">
                    <li>
                        <input type="radio" name="accordian" id="first" checked="true">
                        <label for="first">Dashboard</label>
                        <div class="content">
                            <div class="contentlist"><a href="../user">Users</a></div>
                            <div class="contentlist"><a href="../organization/getallorg">Organizations</a></div>
                            <div class="contentlist"><a href="">Unapproved Outlets</a></div>
                            <div class="contentlist"><a href="">Outlet density Map</a></div>
                            <div class="contentlist"><a href="">Update User Targets</a></div>
                            <div class="contentlist"><a href="">Set Outlet Targets</a></div>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="col-9">
                <!-- Main Content -->
                <div class="p-2 bordered">
                    <h1>Distributors</h1>
                    <p>Displaying distributors for zone {{id}}</p>

                    {{#each data}}
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title distributor-name" data-toggle="collapse" data-target="#details{{this._id}}">
                                    {{this.username}}
                                </h5>
                                <div class="collapse" id="details{{this._id}}">
                                    <p class="card-text"><strong>Email:</strong> {{this.email}}</p>
                                    <p class="card-text"><strong>Contact Number:</strong> {{this.contactnumber}}</p>
                                    <!-- Add more details as needed -->
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var distributorNames = document.querySelectorAll('.distributor-name');
            distributorNames.forEach(function (name) {
                name.addEventListener('click', function () {
                    const details = document.getElementById(name.getAttribute('data-target').substring(1));
                    details.classList.toggle('show');
                });
            });
        });
    </script>
</body>

</html>
